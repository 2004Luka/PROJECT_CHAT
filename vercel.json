{
  "version": 2,
  "builds": [
    { "src": "PROJECT_CHAT/backend/**/*.js", "use": "@vercel/node" },
    { "src": "PROJECT_CHAT/frontend/**/*", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/PROJECT_CHAT/backend/$1" },
    { "src": "/(.*)", "dest": "/PROJECT_CHAT/frontend/$1/index.html" }
  ]
}
