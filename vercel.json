{
    "version": 2,
    "builds": [
      {
        "src": "server/server.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["server/package.json", "server/node_modules/**"]
        }
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/build/$1"
      }
    ]
  }
  